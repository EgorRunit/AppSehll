<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AppShell.Controls.UI"
                    xmlns:settings="clr-namespace:AppShell.Controls.Settings"
                    >

    <settings:DockPlacementWindowSettings x:Key="Ovotan_DockPlacementWindowSettings">
        <settings:DockPlacementWindowSettings.Fill1>
            <SolidColorBrush Color="#EDF0F4" />
        </settings:DockPlacementWindowSettings.Fill1>
        <settings:DockPlacementWindowSettings.Fill2>
            <SolidColorBrush Color="#F5CC84" />
        </settings:DockPlacementWindowSettings.Fill2>
        <settings:DockPlacementWindowSettings.Fill3>
            <SolidColorBrush Color="#7C8AA1" />
        </settings:DockPlacementWindowSettings.Fill3>
        <settings:DockPlacementWindowSettings.Stroke1>
            <SolidColorBrush Color="#ADB2BA" />
        </settings:DockPlacementWindowSettings.Stroke1>
        <settings:DockPlacementWindowSettings.Stroke2>
            <SolidColorBrush Color="#7C8AA1" />
        </settings:DockPlacementWindowSettings.Stroke2>


        <settings:DockPlacementWindowSettings.OverFill1>
            <SolidColorBrush Color="#E2E6EC" />
        </settings:DockPlacementWindowSettings.OverFill1>
        <settings:DockPlacementWindowSettings.OverFill2>
            <SolidColorBrush Color="#FAD487" />
        </settings:DockPlacementWindowSettings.OverFill2>
        <settings:DockPlacementWindowSettings.OverFill3>
            <SolidColorBrush Color="#445879" />
        </settings:DockPlacementWindowSettings.OverFill3>
        <settings:DockPlacementWindowSettings.OverStroke1>
            <SolidColorBrush Color="#ADB2BA" />
        </settings:DockPlacementWindowSettings.OverStroke1>
        <settings:DockPlacementWindowSettings.OverStroke2>
            <SolidColorBrush Color="#445879" />
        </settings:DockPlacementWindowSettings.OverStroke2>
    </settings:DockPlacementWindowSettings>
    

    <ControlTemplate x:Key="Ovotan_Controls_Media_DockPlacementWindow_TopDock" TargetType="{x:Type local:CanvasButton}">
        <Canvas Width="Auto" Height="Auto">
            <Rectangle Canvas.Top="0" Stroke="{TemplateBinding Stroke1}" Canvas.Left="0" Fill="{TemplateBinding Fill1}" Width="30" Height="30"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="4" Canvas.Left="4" Fill="{TemplateBinding Fill2}" Width="22" Height="13"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="5" Canvas.Left="5" Fill="{TemplateBinding Fill3}" Width="20" Height="3"/>
            <Polyline Fill="{TemplateBinding Fill3}" Points="11,26 16,21, 21,26 11,26"></Polyline>
        </Canvas>
    </ControlTemplate>

    <ControlTemplate x:Key="Ovotan_Controls_Media_DockPlacementWindow_BottomDock" TargetType="{x:Type local:CanvasButton}">
        <Canvas RenderOptions.EdgeMode="Aliased" SnapsToDevicePixels="True" Grid.Column="1" Grid.Row="2" Width="30" Height="30">
            <Rectangle Canvas.Top="0" Canvas.Left="0" Stroke="{TemplateBinding Stroke1}" Fill="{TemplateBinding Fill1}" Width="30" Height="30"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="13" Canvas.Left="4" Fill="{TemplateBinding Fill2}" Width="22" Height="13"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="14" Canvas.Left="5" Fill="{TemplateBinding Fill3}" Width="20" Height="3"/>
            <Polyline Fill="{TemplateBinding Fill3}" Points="11,4 16,10, 21,4 11,4"></Polyline>
        </Canvas>
    </ControlTemplate>

    <ControlTemplate x:Key="Ovotan_Controls_Media_DockPlacementWindow_LeftDock" TargetType="{x:Type local:CanvasButton}">
        <Canvas RenderOptions.EdgeMode="Aliased" SnapsToDevicePixels="True" Grid.Column="0" Grid.Row="1" Width="30" Height="30">
            <Rectangle Canvas.Top="0" Canvas.Left="0" Stroke="{TemplateBinding Stroke1}" Fill="{TemplateBinding Fill1}" Width="30" Height="30"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="4" Canvas.Left="4" Fill="{TemplateBinding Fill2}" Width="12" Height="22"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="5" Canvas.Left="5" Fill="{TemplateBinding Fill3}" Width="10" Height="3"/>
            <Polyline Fill="{TemplateBinding Fill3}" Points="25,10 20,16, 25,22 "></Polyline>
        </Canvas>
    </ControlTemplate>


    <ControlTemplate x:Key="Ovotan_Controls_Media_DockPlacementWindow_RightDock" TargetType="{x:Type local:CanvasButton}">
        <Canvas RenderOptions.EdgeMode="Aliased" SnapsToDevicePixels="True" Grid.Column="2" Grid.Row="1"  Width="30" Height="30">
            <Rectangle Canvas.Top="0" Canvas.Left="0" Stroke="{TemplateBinding Stroke1}" Fill="{TemplateBinding Fill1}" Width="30" Height="30"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="4" Canvas.Left="14" Fill="{TemplateBinding Fill2}" Width="12" Height="22"/>
            <Rectangle Stroke="{TemplateBinding Stroke2}" Canvas.Top="5" Canvas.Left="15" Fill="{TemplateBinding Fill3}" Width="10" Height="3"/>
            <Polyline Fill="{TemplateBinding Fill3}" Points="5,10 11,16, 5,22 "></Polyline>
        </Canvas>
    </ControlTemplate>
    



    <Style TargetType="{x:Type local:CanvasButton}" BasedOn="{StaticResource {x:Type ContentControl}}" >
        <Setter Property="Fill1" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=Fill1}"/>
        <Setter Property="Fill2" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=Fill2}"/>
        <Setter Property="Fill3" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=Fill3}"/>
        <Setter Property="Stroke1" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=Stroke1}"/>
        <Setter Property="Stroke2" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=Stroke1}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill1" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=OverFill1}"/>
                <Setter Property="Fill2" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=OverFill2}"/>
                <Setter Property="Fill3" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=OverFill3}"/>
                <Setter Property="Stroke1" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=OverStroke1}"/>
                <Setter Property="Stroke2" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=OverStroke2}"/>
                <Setter Property="Stroke3" Value="{Binding Source={StaticResource Ovotan_DockPlacementWindowSettings}, Path=OverStroke3}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>