<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ovotan.Controls.Docking"
                    xmlns:settings="clr-namespace:Ovotan.Controls.Docking.Settings">

    <settings:DockHositngSettings x:Key="Ovotan_Controls_DockingHost_Settings">
        <settings:DockHositngSettings.SiteHostBackground>
            <SolidColorBrush Color="#5D6B99" />
        </settings:DockHositngSettings.SiteHostBackground>
    </settings:DockHositngSettings>

    <Style TargetType="{x:Type local:SiteHost}" BasedOn="{StaticResource {x:Type ContentControl}}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Background="{Binding Source={StaticResource Ovotan_Controls_DockingHost_Settings}, Path=SiteHostBackground}">
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
     