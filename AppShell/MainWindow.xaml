        xmlns:controls1="clr-namespace:Ovotan.ApplicationShell.Controls;assembly=Ovotan.ApplicationShell.Controls"
        xmlns:controls2="clr-namespace:AppShell"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
	xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <Window.Resources>
    </Window.Resources>

