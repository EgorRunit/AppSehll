        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <controls1:ShellManagement x:Name="MainShallManagement" Grid.Row="1">
            <controls1:ShellManagement.HeadMenuItems>
                <MenuItem Header="Sheel"></MenuItem>
                <MenuItem Header="Tools"></MenuItem>
            </controls1:ShellManagement.HeadMenuItems>
         </controls1:ShellManagement>

